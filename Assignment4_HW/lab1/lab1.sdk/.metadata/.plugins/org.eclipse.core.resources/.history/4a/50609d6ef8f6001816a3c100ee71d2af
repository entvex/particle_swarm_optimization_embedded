#include "ApplicationModeSettingThread.h"


ApplicationModeSettingThread::ApplicationModeSettingThread() : Thread()
{

}

void ApplicationModeSettingThread::run()
{

}

void ApplicationModeSettingThread::chMode()
{
	switch (_state) {
		case 1:
			_state = 2;
			break;
		case 2:
			_state = 3;
			break;
		case 3:
			_state = 1;
			break;
		default:
			_state = 1;
			break;
	}
}

void ApplicationModeSettingThread::EventX()
{
	switch (_state) {
		case 1:
			_state = 2;
			break;
		case 2:
			_state = 3;
			break;
		case 3:
			_state = 1;
			break;
		default:
			_state = 1;
			break;
	}
}

void ApplicationModeSettingThread::EventY()
{
	switch (_state) {
		case 1:
			_state = 2;
			break;
		case 2:
			_state = 3;
			break;
		case 3:
			_state = 1;
			break;
		default:
			_state = 1;
			break;
	}
}
