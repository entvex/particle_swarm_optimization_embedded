#include "QueueScheduler.h"

QueueScheduler::QueueScheduler() {
	// TODO Auto-generated constructor stub

}

QueueScheduler::~QueueScheduler() {

}

void QueueScheduler::put( Command cmd )
{
	cmd_queue.push(cmd);
	empty.notify_one();
}

Command QueueScheduler::take()
{
	Command cmd = cmd_queue.front();
	cmd_queue.pop();
	return cmd;
}
