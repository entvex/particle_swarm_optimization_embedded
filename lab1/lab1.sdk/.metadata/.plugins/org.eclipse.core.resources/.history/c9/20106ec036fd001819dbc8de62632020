#ifndef SRC_STATEMACHINE_STATE_H_
#define SRC_STATEMACHINE_STATE_H_

#include "Context.h"
class Context;

class State {
public:
	State();

	//Transitions
	void GoMaxima(Context*) override;
	void GoMinima(Context*) override;
	void ReturnResult(Context*) override;

	//Actions
	void ActionUp(Context*) override;
	void ActionDown(Context*) override;
	void ActionNext(Context*) override;
	void ActionStart(Context*) override;
	virtual ~State();
protected:
	static void ChangeState(Context*, State*);
};

#endif /* SRC_STATEMACHINE_STATE_H_ */
